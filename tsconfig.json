{
  "include": ["src", "playground", "e2e", "./package.json", "shim.d.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "react": ["preact/compact"]
    }
  }
}
